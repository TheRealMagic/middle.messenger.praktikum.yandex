{
  "compilerOptions": {
    "plugins": [{"name": "typescript-plugin-css-modules"}],
    "module": "es6",
    "target": "es6",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "outDir": "tproj"
  },
  "include": [
    "src/**/*",
    "static/*"
  ],
  "exclude": [
    "node_modules",
    ".gitignore",
    ".github",
    "package.json",
    ".vscode",
    ".parcel-cache",
    "server.js"
  ]
}